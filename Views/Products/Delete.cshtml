@{
    ViewBag.Title = "Delete";
}
@model Gendaccc.Models.Product

<div class="container text-center" style="width: 70%; background-color: lightblue; padding: 20px; margin-top: 20px;">
    <h1 class="mb-4">Delete Product</h1>

    <p>Are you sure you want to delete this product?</p>

    <div class="text-left">
        <h4>@Model.Name</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">Category</dt>
            <dd class="col-sm-9">@Model.Category</dd>
            <dt class="col-sm-3">Price</dt>
            <dd class="col-sm-9">@Model.Price</dd>
        </dl>

        @using (Html.BeginForm("Delete", "Products", FormMethod.Post, new { @class = "text-center" }))
        {
            @Html.HiddenFor(model => model.Id)
            <input type="submit" value="Delete" class="btn btn-danger" />
            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-primary" });
        }
    </div>
</div>
