@{
    ViewBag.Title = "Edit";
}
@model Gendaccc.Models.Product

<div class="container text-center" style="width: 70%; background-color: lightblue; padding: 20px; margin-top: 20px;">
    <h1 class="mb-4">Edit Product</h1>

    <div style="display: inline-block; text-align: left;">
        @using (Html.BeginForm("Edit", "Products", FormMethod.Post))
        {
            @Html.HiddenFor(model => model.Id)

            <div class="form-group">
                <label for="Name">Name:</label>
                @Html.TextBoxFor(model => model.Name, new { @class = "form-control", required = "required" })
            </div>
            <div class="form-group">
                <label for="Category">Category:</label>
                @Html.TextBoxFor(model => model.Category, new { @class = "form-control", required = "required" })
            </div>
            <div class="form-group">
                <label for="Price">Price:</label>
                @Html.TextBoxFor(model => model.Price, new { @class = "form-control", required = "required", step = "0.01" })
            </div>
            <div class="form-group text-center">
                <input type="submit" value="Save" class="btn btn-primary" />
                @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-secondary" })
            </div>
        }
    </div>
</div>
