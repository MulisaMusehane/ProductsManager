@{
    ViewBag.Title = "Create";
}
@model Gendaccc.Models.Product

<div class="container text-center" style="width: 70%; background-color: lightblue; padding: 20px; margin-top: 20px;">
    <h1 class="mb-4">Create a New Product</h1>

    <div style="display: inline-block; text-align: left;">
        @using (Html.BeginForm("Create", "Products", FormMethod.Post, new { @class = "text-left", style = "width: 60%;" }))
        {
            <div class="form-group">
                <label for="Name">Name:</label>
                @Html.TextBoxFor(model => model.Name, new { @class = "form-control", required = "required" })
            </div>
            <div class="form-group">
                <label for="Category">Category:</label>
                @Html.TextBoxFor(model => model.Category, new { @class = "form-control", required = "required" })
            </div>
            <div class="form-group">
                <label for="Price">Price:</label>
                @Html.TextBoxFor(model => model.Price, new { @class = "form-control", required = "required", step = "0.01" })
            </div>
            <div class="form-group text-center">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        }
    </div>
</div>

@if (!string.IsNullOrEmpty(ViewBag.Message))
{
    <div class="alert alert-info">@ViewBag.Message</div>
}
